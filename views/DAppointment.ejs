<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/DAppointment.css">
    <title>Document</title>
  </head>
  <body>
    <main class="table">
        <section class="table_header">
          <h1>Appointment</h1>
        </section>
        <section class="table_body">
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Age</th>
                <th>Description</th>
                <th>Services</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% appointmentList.forEach(appointment => { %>
              <tr>
                <td><%= appointment._id %></td>
                <td><%= appointment.email %></td>
                <td><%= appointment.age %></td>
                <td><%= appointment.description %></td>
                <td><%= appointment.services %></td>
                <td><%= appointment.formattedDate %></td>
                <td><%= appointment.status %></td>
                <td><button class="cancel-button">Cancel</button></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </section>

        <script>
          const cancelButtons = document.querySelectorAll('.cancel-button');

          cancelButtons.forEach((button) => {
            button.addEventListener('click', async () => {
              const appointmentId = button.closest('tr').querySelector('td:first-child').textContent;
              
              try {
                const response = await fetch('/cancel-appointment', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify({ appointmentId }),
                });

                if (response.ok) {
                  // Refresh the page after successful cancellation
                  location.reload();
                } else {
                  console.error('Appointment cancellation failed:', response);
                }
              } catch (error) {
                console.log(error);
              }
            });
          });

        </script>
  </body>
</html>
