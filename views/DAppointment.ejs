<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/DAppointment.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <main class="table">
        <section class="table_header">
          <h1>Appointment</h1>
        </section>
        <section class="table_body">
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Age</th>
                <th>Description</th>
                <th>Services</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% appointmentList.forEach(appointment => { %>
              <tr>
                <td><%= appointment._id %></td>
                <td><%= appointment.email %></td>
                <td><%= appointment.age %></td>
                <td><%= appointment.description %></td>
                <td><%= appointment.services %></td>
                <td><%= appointment.formattedDate %></td>
                <td><%= appointment.status %></td>
                <td>
                  <button class="approve-button">Approve</button>
                  <button class="cancel-button">Cancel</button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </section>

        <script>
          const approveButtons = document.querySelectorAll('.approve-button');
          const cancelButtons = document.querySelectorAll('.cancel-button')


          // Add a click event listener to each "Send" button
          cancelButtons.forEach((button) => {
            const appointmentId = button.closest('tr').querySelector('td:first-child').textContent;
            button.addEventListener('click', async () => {
              swal({
                  title: "Are you sure you want to cancel this appointment?",
                  icon: "warning",
                  buttons: true,
                  dangerMode: true,
              })
              .then(async function (isOkay) {
                  if (isOkay) {
                    const appointmentId = button.closest('tr').querySelector('td:first-child').textContent;
                    try {
                    const response = await fetch('/docCancel-appointment', {
                      method: 'POST',
                      headers: {
                        'Content-Type': 'application/json',
                      },
                      body: JSON.stringify({ appointmentId }),
                    });

                    if (response.ok) {
                      // Refresh the page after successful cancellation
                      location.reload();
                    } else {
                      console.error('Appointment approving failed:', response);
                    }
                  } catch (error) {
                    console.log(error);
                  }
                  }
              });
              return false;
            });
          });


          approveButtons.forEach((button) => {
            button.addEventListener('click', async () => {
              const appointmentId = button.closest('tr').querySelector('td:first-child').textContent;
              swal({
                  title: "Are you sure you want to approved this appointment?",
                  icon: "warning",
                  buttons: true,
                  dangerMode: true,
              })
              .then(async function (isOkay) {
                if (isOkay) {
                  try {
                const response = await fetch('/approve-appointment', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify({ appointmentId }),
                });

                if (response.ok) {
                  // Refresh the page after successful cancellation
                  location.reload();
                } else {
                  console.error('Appointment approving failed:', response);
                }
              } catch (error) {
                console.log(error);
              }
              }
              })
              return false;
            });
          });
        </script>
  </body>
</html>
