<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="/myappointment.css" />
</head>
<body>
  <div class="sidebar">
    <header><%= patientName %></header>
    <ul>
        <li><a href="Phome"><i class="fas fa-qrcode"></i>Dashboard</a></li>
        <li><a href="/PAppointment"><i class="fas fa-qrcode"></i>Appointment</a></li>
        <li><a href="/POnlineConsult"><i class="fas fa-stream"></i>Online Consultation</a></li>
        <li><a href="/myappointment"><i class="fas fa-calendar-week"></i>My Appointment</a></li>
        <div class="space"></div>
        <li><a href="/MyAccount"><i class="fas fa-sliders-h"></i>My Account</a></li>
        <li><a href="/"><i class="fas fa-envelope"></i>Logout</a></li>
    </ul>
  </div>
  
      <main class="table">
        <section class="table_header">
          <h1>Appointment</h1>
        </section>
        <section class="table_body">
          <table>
            <thead>
              <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Description</th>
                <th>Services</th>
                <th>Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% let appointmentHistoryNumber = 1 %>
              <% historyList.forEach(history => { %>
              <tr>
                <td class="hidden"><%= history._id %></td>
                <td><%= appointmentHistoryNumber %></td>
                <td><%= history.name %></td>
                <td><%= history.age %></td>
                <td><%= history.gender %></td>
                <td><%= history.description %></td>
                <td><%= history.services %></td>
                <td><%= history.formattedDate %></td>
                <td><%= history.status %></td>
              </tr>
              <% appointmentHistoryNumber++ %>
              <% }) %>
            </tbody>
          </table>
        </section>
        <section class="table_header">
          <h1>Online Consultation Appointment</h1>
        </section>
        <section class="table_body">
          <table>
            <thead>
              <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Description</th>
                <th>Date</th>
                <th>Paid</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% let consultHistoryNumber = 1 %>
              <% consultHistoryList.forEach(consultHistory => { %>
              <tr>
                <td class="hidden"><%= consultHistory._id %></td>
                <td><%= consultHistoryNumber %></td>
                <td><%= consultHistory.name %></td>
                <td><%= consultHistory.age %></td>
                <td><%= consultHistory.gender %></td>
                <td><%= consultHistory.description %></td>
                <td><%= consultHistory.formattedDate %></td>
                <td><%= consultHistory.paid %></td>
                <td><%= consultHistory.status %></td>
              </tr>
              <% consultHistoryNumber++ %>
              <% }) %>
            </tbody>
          </table>
        </section>
      </main>


  <script>
  </script>
</body>
</html>